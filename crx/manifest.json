{
  "manifest_version": 2,

  "name": "sengokuixa-moko.crx",
  "version": "1.0.0.6747",
  "description": "戦国IXA用ツールmoko.crx版 @author: nameless, osafune, sengokuixa-moko @special thanks: hatt  http://www1.ocn.ne.jp/~hatt/3gkb/",

  "background": {
    "page": "background/background.html",
    "persistent": false
  },

  "page_action": {
    "default_icon": {
      "19": "icons/19.png"
    },
    "default_title": "moko",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "js": [
        "loader.js",
        "main.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
          "http://*.sengokuixa.jp/*",
          "http://mixi.jp/run_appl.pl?id=34581",
          "http://*.app0.mixi-platform.com/*"
      ],
      "exclude_matches": [
          "http://sengokuixa.jp/*"
      ]
    }
  ],

  "permissions": [
      "tabs",
      "cookies",
      "notifications",
      "storage",

      "http://*.sengokuixa.jp/*",
      "http://sengokuixa.hangame.co.jp/*",
      "http://mixi.jp/run_appl.pl?id=34581",
      "http://*.app0.mixi-platform.com/*"
  ],

  "icons": {
    "19": "icons/19.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "web_accessible_resources": [
    "background/background.html",
    "css/*.css",
    "JSON/*.json",
    "plugin/*.js",
    "moko/sengokuixa-moko.js",
    "moko/data.js",
    "popup/*.js",
    "popup/*.html"
  ]

}